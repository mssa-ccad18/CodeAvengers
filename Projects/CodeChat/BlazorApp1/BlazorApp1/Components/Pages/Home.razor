@page "/"
@rendermode InteractiveWebAssembly
@inject NavigationManager Navigation
<PageTitle>CodeChat - Connect with Developers</PageTitle>
<link href="css/home.css" rel="stylesheet" />

<div class="landing-container">
    <div class="landing-content">
        <div class="landing-info">
            <div class="logo">CodeChat</div>
            <h1>Connect with others in real time.</h1>
            <p>CodeChat helps you connect and share with others around the world. Create rooms and talk with one another.</p>
        </div>

        <div class="login-container">
            <div class="login-form">
                <input type="text" placeholder="Email or username" class="login-input" />
                <input type="password" placeholder="Password" class="login-input" />
                <button class="login-button" @onclick="NavigateToChat">Log In</button>

                <div class="login-divider">
                    <span>or</span>
                </div>

                <button class="create-account-button">Create New Account</button>

                <div class="forgot-password">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>

   

    

    <footer class="landing-footer">
        <div class="footer-links">
            <a href="#">About</a>
        </div>
        <div class="copyright">
            CodeChat © 2025
        </div>
    </footer>
</div>

@code {
    private void NavigateToChat()
    {
        Navigation.NavigateTo("/chat");
    }
}